@model List<BTL1.Models.Job>

@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero Section -->
<section class="hero-bg text-white py-5 text-center" style="background-color: #007bff;">
    <div class="container">
        <h1 class="display-4 fw-bold"> Việc làm trực tuyến</h1>
        <p class="lead mb-4">Kết nối với hàng ngàn công việc từ các công ty uy tín. Ứng tuyển online nhanh chóng!</p>
        <form asp-controller="Jobs" asp-action="Index" method="get" class="row g-2 justify-content-center">
            <div class="col-auto">
                <input type="text" class="form-control" name="keyword" placeholder="Tên công việc..." />
            </div>
            <div class="col-auto">
                <input type="text" class="form-control" name="location" placeholder="Địa điểm..." />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-light">Tìm kiếm</button>
            </div>
        </form>
    </div>
</section>

<!-- Featured Jobs Section -->
<section class="container py-5">
    <h2 class="text-center fw-bold mb-4">Tin Tuyển Dụng Nổi Bật</h2>
    <div class="row g-4">
        @foreach (var job in Model)
        {
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@job.Title</h5>
                        <p class="card-text"><strong>Công ty:</strong> @job.CompanyName</p>
                        <p class="card-text"><strong>Lương:</strong> @job.Salary</p>
                        <p class="card-text"><strong>Địa điểm:</strong> @job.Location</p>
                        <a asp-controller="Jobs" asp-action="Details" asp-route-id="@job.JobID" class="btn btn-primary">Xem Chi Tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="text-center mt-4">
        <a asp-controller="Jobs" asp-action="Index" class="btn btn-success">Xem Tất Cả Công Việc</a>
    </div>
</section>

<!-- Why Choose Us Section -->
<section class="bg-light py-5">
    <div class="container">
        <h2 class="text-center fw-bold mb-4">Tại Sao Chọn Chúng Tôi?</h2>
        <div class="row text-center">
            <div class="col-md-4">
                <div class="p-3">
                    <i class="bi bi-briefcase-fill fs-1 text-primary"></i>
                    <h5 class="mt-3 fw-medium">Công Việc Phong Phú</h5>
                    <p>Hàng ngàn công việc chất lượng từ doanh nghiệp khắp Việt Nam.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3">
                    <i class="bi bi-person-check-fill fs-1 text-primary"></i>
                    <h5 class="mt-3 fw-medium">Ứng Tuyển Nhanh Chóng</h5>
                    <p>Hồ sơ online đơn giản, thao tác nhanh gọn, dễ theo dõi.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3">
                    <i class="bi bi-building-fill fs-1 text-primary"></i>
                    <h5 class="mt-3 fw-medium">Dành Cho Nhà Tuyển Dụng</h5>
                    <p>Đăng tin miễn phí, tiếp cận ứng viên phù hợp tức thì.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Footer -->
<footer class="bg-dark text-white py-4">
    <div class="container">
        <div class="row">
            <div class="col-md-6 text-center text-md-start">
                <h5 class="fw-bold">Việc làm trực tuyến </h5>
                <p>Nền tảng kết nối việc làm trực tuyến cho sinh viên và doanh nghiệp.</p>
            </div>
            <div class="col-md-6 text-center text-md-end">
                <h5 class="fw-bold">Liên Hệ</h5>
                <p>Email: support@btl1.vn<br>Hotline: 0979 999 999</p>
            </div>
        </div>
        <hr class="bg-white">
        <p class="text-center mb-0">© 2025 . Mọi quyền được bảo lưu.</p>
    </div>
</footer>
