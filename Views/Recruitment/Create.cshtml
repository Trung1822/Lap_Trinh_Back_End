@model BTL1.Models.Job

@{
    ViewData["Title"] = "Đăng tin tuyển dụng";
}

<div class="container mt-4">
    <h3 class="mb-3">Đăng tin tuyển dụng</h3>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label class="form-label">Tiêu đề công việc</label>
            <input asp-for="Title" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Tên công ty</label>
            <input asp-for="CompanyName" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Lương</label>
            <input asp-for="Salary" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Địa điểm</label>
            <input asp-for="Location" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Mô tả công việc</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Link ảnh/logo công ty (URL)</label>
            <input asp-for="CompanyLogo" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Đăng tin</button>
    </form>
</div>
